rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /list-invites/{inviteId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.token.email == resource.data.toEmail;
      allow delete: if request.auth != null && (request.auth.token.email == resource.data.toEmail || request.auth.uid == resource.data.fromUid);
    }

    match /users/{userId}/lists/{listId} {
      allow read: if request.auth.uid == userId || (resource.data.members != null && request.auth.uid in resource.data.members.map(member => member.uid));
      allow write: if request.auth.uid == userId || (resource.data.members != null && request.auth.uid in resource.data.members.filter(member => member.role == 'owner' || member.role == 'editor').map(member => member.uid));
    }
    match /users/{userId}/lists/{listId}/{document=**} {
      allow read: if request.auth.uid == userId || (get(/databases/$(database)/documents/users/$(userId)/lists/$(listId)).data.members != null && request.auth.uid in get(/databases/$(database)/documents/users/$(userId)/lists/$(listId)).data.members.map(member => member.uid));
      allow write: if request.auth.uid == userId || (get(/databases/$(database)/documents/users/$(userId)/lists/$(listId)).data.members != null && request.auth.uid in get(/databases/$(database)/documents/users/$(userId)/lists/$(listId)).data.members.filter(member => member.role == 'owner' || member.role == 'editor').map(member => member.uid));
    }

    match /{path=**}/lists/{listId} {
      allow read: if request.auth != null && (resource.data.members != null && request.auth.uid in resource.data.members.map(member => member.uid));
    }
  }
}
