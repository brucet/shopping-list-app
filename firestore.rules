rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /list-invites/{inviteId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.token.email == resource.data.toEmail;
      allow delete: if request.auth != null && (request.auth.token.email == resource.data.toEmail || request.auth.uid == resource.data.fromUid);
    }

    match /users/{userId}/lists/{listId} {
      allow read: if request.auth.uid in resource.data.memberUids;
      allow create: if request.auth.uid == userId;
      allow update, delete: if request.auth.uid in resource.data.memberUids && resource.data.members[request.auth.uid].role != 'viewer';
    }
    match /users/{userId}/lists/{listId}/{document=**} {
      allow read: if request.auth.uid in get(/databases/$(database)/documents/users/$(userId)/lists/$(listId)).data.memberUids;
      allow write: if request.auth.uid in get(/databases/$(database)/documents/users/$(userId)/lists/$(listId)).data.memberUids && get(/databases/$(database)/documents/users/$(userId)/lists/$(listId)).data.members[request.auth.uid].role != 'viewer';
    }

    match /{path=**}/lists/{listId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.memberUids;
    }
  }
}